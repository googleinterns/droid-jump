<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/startFragment">
    <fragment
        android:id="@+id/startFragment"
        android:name="com.google.droidjump.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
        <action
            android:id="@+id/action_startFragment_to_levelsFragment"
            app:destination="@id/levelsFragment" />
        <action
            android:id="@+id/action_startFragment_to_howToPlayFragment"
            app:destination="@id/howToPlayFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFailureFragment"
        android:name="com.google.droidjump.GameFailureFragment"
        android:label="fragment_game_failure"
        tools:layout="@layout/fragment_game_failure" >
        <action
            android:id="@+id/action_gameFailureFragment_to_howToPlayFragment"
            app:destination="@id/howToPlayFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameSuccessFragment"
        android:name="com.google.droidjump.GameSuccessFragment"
        android:label="fragment_game_success"
        tools:layout="@layout/fragment_game_success" >
        <action
            android:id="@+id/action_gameSuccessFragment_to_howToPlayFragment"
            app:destination="@id/howToPlayFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.google.droidjump.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game" >
        <action
            android:id="@+id/action_gameFragment_to_gameSuccessFragment"
            app:destination="@id/gameSuccessFragment"
            app:popUpTo="@id/startFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_gameFragment_to_gameFailureFragment"
            app:destination="@id/gameFailureFragment"
            app:popUpTo="@id/startFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/levelsFragment"
        android:name="com.google.droidjump.LevelsFragment"
        android:label="fragment_levels"
        tools:layout="@layout/fragment_levels" >
        <action
            android:id="@+id/action_levelsFragment_to_gameFragment"
            app:destination="@id/gameFragment"
            app:popUpTo="@id/startFragment" />
    </fragment>
    <fragment
        android:id="@+id/howToPlayFragment"
        android:name="com.google.droidjump.HowToPlayFragment"
        android:label="fragment_how_to_play"
        tools:layout="@layout/fragment_how_to_play" />
</navigation>
