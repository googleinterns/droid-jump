<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LevelsFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/choose_level_header"
            style="@style/ScreenHeader"
            android:text="@string/choose_level_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <GridView
            android:id="@+id/levels_grid_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/fab_margin"
            android:cacheColorHint="#FFFFFF"
            android:clipToPadding="false"
            android:horizontalSpacing="@dimen/fab_margin"
            android:numColumns="3"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingRight="@dimen/fab_margin"
            android:verticalSpacing="@dimen/fab_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choose_level_header"
            app:layout_constraintVertical_bias="0.0"
            android:scrollbarStyle="outsideOverlay"/>

        <ImageButton
            android:id="@+id/menu_button"
            style="@style/MenuButton"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/menu_button"
            app:layout_constraintBottom_toTopOf="@+id/levels_grid_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
